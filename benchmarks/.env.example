# Database Benchmark Environment Configuration
# Copy this file to .env and fill in your actual credentials
# Never commit .env to git - it contains sensitive information

# Snowflake Configuration
SNOWFLAKE_ACCOUNT=your_account
SNOWFLAKE_USER=your_username
SNOWFLAKE_PASSWORD=your_password
SNOWFLAKE_DATABASE=your_database
SNOWFLAKE_SCHEMA=your_schema
SNOWFLAKE_WAREHOUSE=your_warehouse

# Redshift Configuration
REDSHIFT_HOST=your_cluster.region.redshift.amazonaws.com
REDSHIFT_PORT=5439
REDSHIFT_DATABASE=your_database
REDSHIFT_USER=your_user
REDSHIFT_PASSWORD=your_password

# Firebolt Configuration
FIREBOLT_ACCOUNT_NAME=your_firebolt_account_name
FIREBOLT_DATABASE=your_database
FIREBOLT_ENGINE_NAME=your_engine
FIREBOLT_SERVICE_ID=your_firebolt_service_account_id
FIREBOLT_SERVICE_SECRET=your_firebolt_service_account_secret

# BigQuery Configuration
BIGQUERY_PROJECT_ID=your_project_id
BIGQUERY_DATASET=your_dataset
# For BigQuery, use the path to your JSON key file instead of inline JSON
BIGQUERY_KEY_FILE=path/to/your/service-account-key.json

# Application Configuration
DEFAULT_OUTPUT_DIR=benchmark_results
DEFAULT_POOL_SIZE=5
DEFAULT_CONCURRENCY=1

# UI Configuration (for future extensions)
STREAMLIT_SERVER_PORT=8501
STREAMLIT_SERVER_ADDRESS=localhost
DEBUG_MODE=false